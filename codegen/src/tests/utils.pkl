amends "pkl:test"

import "../internal/utils.pkl"

facts {
  ["normalizeName"] {
    utils.normalizeName("foo") == "foo"
    utils.normalizeName("foo foo") == "foo_foo"
    utils.normalizeName("1 foo") == "1_foo"
    utils.normalizeName("bar ` $$ 你好 baz") == "bar_你好_baz"
    utils.normalizeName("Python111") == "Python111"
    utils.normalizeName("snake_case") == "snake_case"
  }
  ["toPythonString"] {
    utils.toPythonString("foo") == #""foo""#
    utils.toPythonString("你好") == #""你好""#
    utils.toPythonString(#"pkl:"name""#) == ##"#"pkl:"name""#"##
    utils.toPythonString("""
      my multiline

      string
      """) == #"""
        """
          my multiline
          
          string
          """
        """#
    utils.toPythonString("""
      multiline string

      with `backticks`
      """) == #"""
        """
          multiline string
          
          with `backticks`
          """
        """#
  }
}
